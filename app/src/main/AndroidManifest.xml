    package="sunshine.andrew.com.elramady">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addClient" />
        <activity android:name=".addWorker" />
        <activity android:name=".addTrader" />
        <activity
            android:name=".ShowWorker"
            android:label="@string/title_activity_show_worker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowTrader"
            android:label="@string/title_activity_show_trader"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>